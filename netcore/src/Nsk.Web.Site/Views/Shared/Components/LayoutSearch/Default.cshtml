@model BaseSearchViewModel
<div class="row">
    <form asp-area=""asp-controller="catalog" asp-action="search" method="post"
          class="navbar-form navbar-left" role="search">
        <select asp-items="Model.Categories"
                class="form-control" data-val="true" id="SelectedCategoryId" name="SelectedCategoryId">          
        </select>
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" id="query" name="query" data-val="true" data-val-required="*">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </span>
        </div>
    </form>
</div>
